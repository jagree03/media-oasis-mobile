<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProfileSettingsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="16dp" />

    <TextView
        android:id="@+id/textViewMenuHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/frutiger_fontfamily"
        android:text="@string/profileSettings"
        android:textAlignment="center"
        android:textColor="#F8F5F5"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_RegistrationForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_RegistrationForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="110dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_ButtonsBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMenuHeader">

        <LinearLayout
            android:id="@+id/linearLayout_FirstNameBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFirstName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_fontfamily"
                android:text="@string/firstName"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextFirstNameInput"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@color/editTextBackground"
                android:ems="10"
                android:inputType="text"
                android:text=""
                android:textColor="@color/grey"
                android:textColorHint="@color/editTextHintColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_LastNameBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewLastName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_fontfamily"
                android:text="@string/lastName"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextLastNameInput"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@color/editTextBackground"
                android:ems="10"
                android:inputType="text"
                android:text=""
                android:textColor="@color/grey"
                android:textColorHint="@color/editTextHintColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_EmailBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_fontfamily"
                android:text="@string/email"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextEmailInput"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="emailAddress"
                android:background="@color/editTextBackground"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColor="@color/grey"
                android:textColorHint="@color/editTextHintColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_PhoneNoBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPhoneNum"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_fontfamily"
                android:text="@string/phoneNo"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextPhoneNumInput"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="phone"
                android:background="@color/editTextBackground"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/grey"
                android:textColorHint="@color/editTextHintColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_UsernameBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_fontfamily"
                android:text="@string/username"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextUsernameInput"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="username"
                android:background="@color/editTextBackground"
                android:ems="10"
                android:inputType="text"
                android:text=""
                android:textColor="@color/grey"
                android:textColorHint="@color/editTextHintColour" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_PasswordBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/frutiger_fontfamily"
                android:text="@string/password"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextPasswordInput"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:autofillHints="name"
                android:background="@color/editTextBackground"
                android:ems="10"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/grey"
                android:textColorHint="@color/editTextHintColour" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_ButtonsBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_ShowHidePassword"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/frutiger_fontfamily"
            android:onClick="showHidePassword"
            android:text="@string/show"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_updateInformation"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/frutiger_fontfamily"
            android:text="@string/updateInfo"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>